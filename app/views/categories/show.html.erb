<%= render "partials/header", title: @category.name %>
<div>
    <div>
        <span><%= @category.name %><span class="group-amount ent-amount">
            <%= "$#{@transactions.sum(:amount)}" %>
        </span>
    </div>
    <div>
        <%if @transactions.empty?%>
            <span> You don't have any transaction in this category!</span>
            <%= link_to(new_transaction_path, class: '') do %>
            <button type="button">Add Transactions</button>
            <% end %>
        <% else %>
            <% @transactions.each do |transaction|%>
                <%= transaction.name%>
            <% end %>
        <%end%>
    </div>
    <div>
        <%= link_to(new_transaction_path, class: '') do %>
            <button type="button">Add Transaction</button>
        <% end %>
    </div>
</div>